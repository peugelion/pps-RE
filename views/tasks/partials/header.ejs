<!DOCTYPE html>
<html>
	<head>
		<!-- Standard Meta -->
	  <meta charset="utf-8" />
	  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
	  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
	  <meta name="mobile-web-app-capable" content="yes">
	  <meta name="theme-color" content="#b21e1e" />
		
		<title>Hubie Task Manager</title>
		<link rel="icon" type="image/png" href="/assets/images/europos_logo.png" />
	  <link rel="icon" sizes="192x192" type="image/png" href="/assets/images/logo-android-192x192.png">
	  <link rel="manifest" href="/assets/manifest.json">

	  	<!-- Global site tag (gtag.js) - Google Analytics -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=UA-10938976-45"></script>
		<script>
		  window.dataLayer = window.dataLayer || [];
		  function gtag(){dataLayer.push(arguments);}
		  gtag('js', new Date());
		  gtag('config', 'UA-10938976-45', {
		  	'user_id': '<%= currentUser %>' // Set the user ID using signed-in user_id. ... https://developers.google.com/analytics/devguides/collection/analyticsjs/cookies-user-id
		  });
		  var vapidPublicKey = "<%= vapidPublicKey %>";
		</script>
		
  	<meta http-equiv="Default-Style" content="<%= style ? style : 'default' %>">
		<link rel="<%= style ? style != 'default' ? 'alternate' : '' : '' %> stylesheet" type="text/css" title="default" href="/assets/css/semantic.min.css">
		<link rel="<% if(style != 'bootstrap3') { %>alternate <% } %>stylesheet" type="text/css" title="bootstrap3" href="/assets/css/semantic.bootstrap3.min.css">
		<link rel="<% if(style != 'cerulean') { %>alternate <% } %>stylesheet" type="text/css" title="cerulean" href="/assets/css/semantic.cerulean.min.css">
		<link rel="<% if(style != 'chubby')   { %>alternate <% } %>stylesheet" type="text/css" title="chubby"   href="/assets/css/semantic.chubby.min.css">
		<link rel="<% if(style != 'cosmo')    { %>alternate <% } %>stylesheet" type="text/css" title="cosmo" href="/assets/css/semantic.cosmo.min.css">
		<link rel="<% if(style != 'flatly')   { %>alternate <% } %>stylesheet" type="text/css" title="flatly" href="/assets/css/semantic.flatly.min.css">
		<link rel="<% if(style != 'journal')  { %>alternate <% } %>stylesheet" type="text/css" title="journal" href="/assets/css/semantic.journal.min.css">
		<link rel="<% if(style != 'lumen')    { %>alternate <% } %>stylesheet" type="text/css" title="lumen" href="/assets/css/semantic.lumen.min.css">
		<link rel="<% if(style != 'sandstone'){ %>alternate <% } %>stylesheet" type="text/css" title="sandstone" href="/assets/css/semantic.sandstone.min.css">
		<link rel="<% if(style != 'simplex')  { %>alternate <% } %>stylesheet" type="text/css" title="simplex" href="/assets/css/semantic.simplex.min.css">
		<link rel="<% if(style != 'slate')    { %>alternate <% } %>stylesheet" type="text/css" title="slate" href="/assets/css/semantic.slate.min.css">
		<link rel="<% if(style != 'spacelab')  { %>alternate <% } %>stylesheet" type="text/css" title="spacelab" href="/assets/css/semantic.spacelab.min.css">
		<link rel="<% if(style != 'yeti')     { %>alternate <% } %>stylesheet" type="text/css" title="yeti" href="/assets/css/semantic.yeti.min.css">

		<link rel="stylesheet" type="text/css" href="/assets/css/app.css">
		
		<script type="text/javascript" src="/assets/js/jquery-3.2.1.min.js"></script>
		<script type="text/javascript" src="/assets/js/semantic.min.js"></script>
		<script type="text/javascript" src="/assets/js/app.js"></script>
		<script type="text/javascript" src="/assets/js/pushNotificationsMng.js"></script>
	</head>
	<body>
	    <div class="ui fluid container" id='teme'>
			<form class="ui buttons">
				<input type="submit" class="ui button" name="theme" value="default" id="default">
				<input type="submit" class="ui button" name="theme" value="bootstrap3" id="bootstrap3">
				<input type="submit" class="ui button" name="theme" value="cerulean" id="cerulean">
				<input type="submit" class="ui button" name="theme" value="chubby" id="chubby">
				<input type="submit" class="ui button" name="theme" value="cosmo" id="cosmo">
				<input type="submit" class="ui button" name="theme" value="flatly" id="flatly">
				<input type="submit" class="ui button" name="theme" value="journal" id="journal">
				<input type="submit" class="ui button" name="theme" value="lumen" id="lumen">
				<input type="submit" class="ui button" name="theme" value="sandstone" id="sandstone">
				<input type="submit" class="ui button" name="theme" value="simplex" id="simplex">
				<input type="submit" class="ui button" name="theme" value="slate" id="slate">
				<input type="submit" class="ui button" name="theme" value="spacelab" id="spacelab">
				<input type="submit" class="ui button" name="theme" value="yeti" id="yeti">
			</form>
	    </div>
		<div class="ui borderless inverted menu" id="meni">
			<div class="ui container">
		        <a class="item" href="/tasks/taskOverview" title="Lista taskova">
		      	    <img class="logo" src="/assets/images/europos_logo.png">
		        </a>
			    <a class="browse item ep_title" href="/tasks/taskOverview">
			        Hubie Task Manager
			    </a>
				<div class="ui right item">
			  		<% if(!currentUser) { %>
						<a class="ui inverted green button" href="/login">Log in</a>
					<% } else { %>
						<a class="item ep_currentuser" onclick="$('#teme').toggleClass('active')"><%= currentUser %></a>
				    <a class="ui inverted red button" href="/logout">Log out</a>
					<% } %>
				</div>
			</div>
		</div>